@using iSpindelMvc.Data
@model iSpindelMvc.Models.Device

@{
    var disabled = LogDb.ReadOnly ? "disabled" : "";
    ViewData["Title"] = "Edit";
    var updateReadOnly = "readonly";
}

<h2>Edit Device</h2>
<hr />
<form asp-action="Edit">
    <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-6 col-lg-4">
            <label asp-for="DeviceId" class="col-form-label"></label>
            <input asp-for="DeviceId" class="form-control" readonly="@(updateReadOnly)" />
            <span asp-validation-for="DeviceId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 col-lg-4">
            <label asp-for="Name" class="col-form-label"></label>
            <input asp-for="Name" class="form-control" readonly="@(updateReadOnly)" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 col-lg-4">
            <label asp-for="SpindelId" class="col-form-label"></label>
            <input asp-for="SpindelId" class="form-control" readonly="@(updateReadOnly)" />
            <span asp-validation-for="SpindelId" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group col-md-12 col-lg-8 col-xl-6">
            <label asp-for="Description" class="col-form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 col-lg-8 col-xl-6">
            <label asp-for="Token" class="col-form-label"></label>
            <input asp-for="Token" class="form-control" />
            <span asp-validation-for="Token" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group col">
            <input type="submit" value="Save" class="btn btn-primary" @Html.Raw(disabled) />
        </div>
    </div>
</form>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>

